{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "vercel-php@0.7.3"
        }
    ],
    "routes": [
        {
            "src": "/(css|js|images|build)/(.*)",
            "dest": "public/$1/$2"
        },
        {
            "src": "/(.*\\.(ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
            "dest": "public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.php"
        }
    ],
    "env": {
        "APP_NAME": "Lojinha-Segue-me",
        "APP_ENV": "production",
        "APP_KEY": "@app-key",
        "APP_DEBUG": "false",
        "APP_URL": "https://lojinha-segue-me.vercel.app",
        "APP_LOCALE": "br",
        "APP_FALLBACK_LOCALE": "br",
        "APP_FAKER_LOCALE": "pt_BR",
        "LOG_CHANNEL": "stack",
        "LOG_STACK": "single",
        "LOG_LEVEL": "error",
        "DB_CONNECTION": "mysql",
        "DB_HOST": "lojinhasegueme.c7miqcugyquv.sa-east-1.rds.amazonaws.com",
        "DB_PORT": "3306",
        "DB_DATABASE": "lojinha_segueme",
        "DB_USERNAME": "root",
        "DB_PASSWORD": "@db-password",
        "SESSION_DRIVER": "database",
        "SESSION_LIFETIME": "120",
        "SESSION_ENCRYPT": "false",
        "CACHE_STORE": "database",
        "FILESYSTEM_DISK": "local",
        "QUEUE_CONNECTION": "database",
        "BROADCAST_CONNECTION": "log"
    }
}
