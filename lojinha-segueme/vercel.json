{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "public",
    "builds": [
        {
            "src": "api/index.php",
            "use": "vercel-php@0.7.2"
        }
    ],
    "routes": [
        {
            "src": "/(css|js|images|build)/(.*)",
            "dest": "public/$1/$2"
        },
        {
            "src": "/(.*\\.(ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
            "dest": "public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_KEY": "@app_key",
        "APP_URL": "https://your-domain.vercel.app"
    }
}
